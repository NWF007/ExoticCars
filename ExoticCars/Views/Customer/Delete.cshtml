@page "{customerId}"
@model Customer

<h2>@ViewBag.Message</h2>


<h2>Delete!</h2>

<div class="alert alert-danger">
    Are you sure you want to delete @Model.FirstName?
</div>
<form method="post">
    <button type="submit" class="btn btn-danger">Yes!</button>
    <a asp-page="List" class="btn btn-default">Cancel</a>
</form>