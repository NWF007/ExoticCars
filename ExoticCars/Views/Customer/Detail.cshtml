
@model Customer


<div class="card" style="width: 20rem;">
    <img src="https://image.shutterstock.com/image-vector/ui-image-placeholder-wireframes-apps-260nw-1037719204.jpg" class="card-img-top" alt="...">
    <div class="card-body">
        <h4 class="card-title">Name: @Model.FirstName @Model.LastName</h4>
        <h4>Phone: @Model.Phone
        </h4>
        <h4>Address: @Model.Address</h4>
        <h4>City: @Model.City</h4>
        <h4>Postal code: @Model.PostalCode</h4>
        <div class="row">
            <a class="btn btn-primary"
               asp-controller="Customer"
               asp-action="List">Back</a>
        </div>
    </div>
</div>
