@model ExtraViewModel

<div class="container">
    <div class="row">
        <div>
            <h2>All Extras available</h2>
        </div>
        <div class="float-right">
            <a asp-controller="Extra" asp-action="Add" class="btn btn-primary ml-5">Add extra</a>
        </div>
    </div>

    <div>
        <div class="row">
            @foreach (var ex in Model.Extras)
            {
                <div class="col-sm-4 mb-2">
                    <div class="card" style="width: 20rem;">
                        <img src="https://thumbs.dreamstime.com/z/placeholder-rgb-color-icon-image-gallery-photo-thumbnail-available-album-digital-media-multimedia-file-visual-content-snapshot-187369540.jpg" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h4 class="card-title">Name: @ex.ExtraName</h4>
                            <div class="row">
                                <a asp-controller="Extra" asp-action="Detail" asp-route-extraId="@ex.ExtraID" class="btn btn-danger mr-1 ml-4">Details</a>
                                <a asp-controller="Extra" asp-action="Edit" asp-route-extraId="@ex.ExtraID" class="btn btn-info mr-1">Edit</a>
                                <a asp-controller="Extra" asp-action="Delete" asp-route-extraId="@ex.ExtraID" class="btn btn-primary mr-1">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>