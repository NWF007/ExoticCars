
@model Product


<div class="card" style="width: 20rem;">
    <img src="https://image.shutterstock.com/image-vector/car-logo-icon-emblem-design-260nw-473088025.jpg" class="card-img-top" alt="...">
    <div class="card-body">
        <h4 class="card-title">Name: @Model.Name</h4>
        <h4>
            Model: @Model.Model
        </h4>
        <h4>SellingPrice: @Model.SellingPrice</h4>
        <h4>CostPrice: @Model.CostPrice</h4>
        <h4>Year: @Model.Year</h4>
        <h4>Engine No: @Model.EngineNo</h4>
        <div class="row">
            <a class="btn btn-primary"
               asp-controller="Product"
               asp-action="List">Back</a>
        </div>
    </div>
</div>