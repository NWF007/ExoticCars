@*@page "{customerId:int?}"*@
@model Product


<div class="alert alert-info">
    You are about to update @Model.Name
</div>

<form asp-action="Edit" method="post" class="form-horizontal" role="form">
    <div class="form-group">
        <label asp-for="ProductID" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="ProductID" class="form-control" value="@Model.ProductID" readonly />
            <span asp-validation-for="ProductID" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Name" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Name" class="form-control" value="@Model.Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Model" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Model" class="form-control" value="@Model.Model" />
            <span asp-validation-for="Model" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="SellingPrice" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="SellingPrice" class="form-control" value="@Model.SellingPrice" />
            <span asp-validation-for="SellingPrice" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="CostPrice" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="CostPrice" class="form-control" value="@Model.CostPrice" />
            <span asp-validation-for="CostPrice" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Year" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Year" class="form-control" value="@Model.Year" />
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="EngineNo" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="EngineNo" class="form-control" value="@Model.EngineNo" />
            <span asp-validation-for="EngineNo" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <a asp-controller="Product" asp-action="List" class="btn btn-default">Cancel</a>
        <button type="submit" class="btn btn-success">Update</button>
    </div>
</form>
