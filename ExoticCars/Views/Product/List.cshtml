@model ProductViewModel

<div class="container">
    <div class="row">
        <div>
            <h2>All Cars</h2>
        </div>
        <div class="float-right">
            <a asp-controller="Product" asp-action="Add" class="btn btn-primary ml-5">Add Product</a>
        </div>
    </div>

<div>
    @foreach (var prod in Model.Products)
    {
        <div class="card" style="width: 20rem;">
            <img src="https://image.shutterstock.com/image-vector/car-logo-icon-emblem-design-260nw-473088025.jpg" class="card-img-top" alt="...">
            <div class="card-body">
                <h4 class="card-title">Name: @prod.Name</h4>
                <div class="row">
                    <a asp-controller="Product" asp-action="Detail" asp-route-productId="@prod.ProductID" class="btn btn-danger mr-1 ml-4">Details</a>
                    <a asp-controller="Product" asp-action="Edit" asp-route-productId="@prod.ProductID" class="btn btn-info mr-1">Edit</a>
                    <a asp-controller="Product" asp-action="Delete" asp-route-productId="@prod.ProductID" class="btn btn-primary mr-1">Delete</a>
                </div>
            </div>
        </div>
    }
    </div>
</div>