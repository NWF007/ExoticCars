        <label asp-for="OrderProduct.ExtraQuantity" class="col-md-2 control-label">Extra Quantity</label>
        <div class="col-md-5">
            <input type="number" asp-for="OrderProduct.ExtraQuantity" class="form-control" placeholder="0" />
            <span asp-validation-for="OrderProduct.ExtraQuantity" class="text-danger"></span>
        </div>
    </div>

