@model Order
@*Fix date input field*@

<div class="alert alert-danger">
    You are about to delete order number @Model.OrderID that was placed on @Model.OrderDate
</div>

<form asp-action="DeleteOrder" method="post" class="form-horizontal" role="form">
    <div class="form-group" hidden>
        <label asp-for="OrderID" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="OrderID" class="form-control" value="@Model.OrderID" readonly />
            <span asp-validation-for="OrderID" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group" hidden>
        <label asp-for="CustomerID" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="CustomerID" class="form-control" value="@Model.CustomerID" readonly />
            <span asp-validation-for="CustomerID" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group" hidden>
        <label asp-for="OrderDate" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input type="datetime-local" asp-for="OrderDate" class="form-control" value="@Model.OrderDate" readonly />
            <span asp-validation-for="OrderDate" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Status" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Status" class="form-control" value="@Model.Status" readonly />
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Comments" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Comments" class="form-control" value="@Model.Comments" readonly />
            <span asp-validation-for="Comments" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="TotalAmount" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="TotalAmount" class="form-control" value="@Model.TotalAmount" readonly />
            <span asp-validation-for="TotalAmount" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <a asp-controller="Order" asp-action="List" class="btn btn-default">Cancel</a>
        <button type="submit" class="btn btn-danger">Delete</button>
    </div>
</form>
