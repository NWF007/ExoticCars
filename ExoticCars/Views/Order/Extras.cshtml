@model ExtraViewModel

<h3>You are about to add extras</h3>

<form asp-action="Extras" method="post" class="form-horizontal" role="form">

    <div class="form-group" >
        <label asp-for="ProductExtra.OrderID" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="ProductExtra.OrderID" class="form-control" name="OrderID" value="@Model.Order.OrderID" readonly />
            <span asp-validation-for="ProductExtra.OrderID" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group" >
        <label asp-for="ProductExtra.ProductID" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="ProductExtra.ProductID" class="form-control" name="ProductID" value="@Model.Product.ProductID" readonly />
            <span asp-validation-for="ProductExtra.ProductID" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Extra.ExtraName" class="col-md-2 control-label">Select Extras</label>
        <div class="col-md-5">

            @*<select class="form-control" asp-for="Product.ProductID" name="ProductID[]" required>*@
            @foreach (var ex in Model.Extras)
            {
                <div class="checkbox" id="dropdownlist">
                    <label>
                        <input type="checkbox"
                               id="dropdownlist"
                               name="ExtraID[]"
                               value="@ex.ExtraID" /> @ex.ExtraName - @ex.ExtraPrice
                            <span asp-validation-for="Extra.ExtraName" class="text-danger"></span>
                        </label>

                    </div>
                }
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-offset-2 col-md-5">
            <input asp-controller="Order" asp-action="List" type="submit" class="btn btn-danger" value="Cancel" />
            <input type="submit" class="btn btn-primary" value="Add Extras" />
        </div>
    </div>
</form>
