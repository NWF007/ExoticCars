        </select>*@-->
    <div class="col-md-5">
        <div class="form-control">
            @Html.DropDownListFor(m => Model.Status, Enum.GetNames(typeof(Order.status))
                .Select(e => new SelectListItem { Text = e }))
        </div> 
    </div>
    <span class="text-danger" asp-validation-for="Status"></span>
</div>

    <div class="form-group">
        <label asp-for="Comments" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Comments" class="form-control" value="@Model.Comments" />
            <span asp-validation-for="Comments" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="TotalAmount" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="TotalAmount" class="form-control" value="@Model.TotalAmount" readonly />
            <span asp-validation-for="TotalAmount" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <a asp-controller="Order" asp-action="List" class="btn btn-default">Cancel</a>
        <button type="submit" class="btn btn-success">Update</button>
    </div>
</form>
