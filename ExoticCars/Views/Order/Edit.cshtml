@model Order

@*Fix date input field*@

<div class="alert alert-info">
    You are about to update @Model.OrderID that was placed on @Model.OrderDate
</div>

<form asp-action="EditOrder" method="post" class="form-horizontal" role="form">
    <div class="form-group">
        <label asp-for="OrderID" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="OrderID" class="form-control" value="@Model.OrderID" readonly />
            <span asp-validation-for="OrderID" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="CustomerID" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="CustomerID" class="form-control" value="@Model.CustomerID" readonly />
            <span asp-validation-for="CustomerID" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="OrderDate" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            @*<input asp-for="OrderDate" class="form-control" value="@Html.EditorFor(m => m.OrderDate)" readonly />*@
            <input asp-for="OrderDate" class="form-control" value="@Html.EditorFor(m => m.OrderDate)" readonly />
            <span asp-validation-for="OrderDate" class="text-danger"></span>
        </div>
    </div>

